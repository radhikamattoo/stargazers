<h1> {{name}} </h1>
{{#if message}}
  <h4 class='error'> {{message}}</h4>
{{/if}}
{{#if list}}
    <p> Narrow your search by querying with a hostname, planet letter, or by temperature </p>
    <div class="form-group">
    <form type="GET" method="">
       <div class="form-group col-xs-4 col-md-offset-4">
         Hostname: <input  class="form-control" type="text" name="hostname" placeholder="11 Com">
       </div>
       <div class="form-group col-xs-4 col-md-offset-4">
      Planet Letter: <input class="form-control" type="text" name="planetletter" placeholder="B">
    </div>
    <div class="form-group col-xs-4 col-md-offset-4">
      Temperature (K): <input  class="form-control" type="number" name="temperature" placeholder="4742">
    </div>
    <div class="form-group col-xs-4 col-md-offset-4">
      <button class="btn btn-primary" type="submit" value="Search">Search!</button> <br>
    </div>
    </form><br>
  </div>
  <div class="form-group col-xs-4 col-md-offset-4">
    <p><a href="/stargazers/{{username}}" class="btn btn-secondary" role="button"> Back to Profile </a></p>
  </div> <br><br><br>

  <table class="table table-bordered table-hover table-striped">
    <thead class="thead-inverse">
    <tr>
      <th >Host Name </th>
      <th >Planet Letter </th>
      <th>Discovery </th>
      <th >Planets in System</th>
      <th >Orbital Period </th>
      <th >Orbit (SemiMajor Axis) </th>
      <th>Eccentricity </th>
      <th>Inclination </th>
      <th>Mass wrt Jupiter </th>
      <th >Density </th>
      <th>TVV Flag </th>
      <th >Kepler Field Flag </th>
      <th>K2 Mission Flag </th>
      <th>Num Notes </th>
      <th >RA (Str) </th>
      <th >RA </th>
      <th >Dec (Str)</th>
      <th >Dec </th>
      <th>Distance </th>
      <th >Optical Magnitude </th>
      <th>Optical Magnitude Band </th>
      <th>Temperature (K) </th>
      <th >Stellar Mass </th>
      <th >Stellar Radius </th>
      <th>Updated </th>
    </tr>
  </thead>
    {{#each list}}
      <tr>
        <td>{{HostName}} </td>
        <td>{{PlanetLetter}} </td>
        <td>{{Discovery}} </td>
        <td>{{NumPlanetsInSystem}} </td>
        <td>{{OrbitalPeriod}} </td>
        <td>{{OrbitSemiMajorAxis}} </td>
        <td>{{Eccentricity}} </td>
        <td>{{Inclination}} </td>
        <td>{{MassWRTJupiter}} </td>
        <td>{{Density}} </td>
        <td>{{TVVFlag}} </td>
        <td>{{KeplerFieldFlag}} </td>
        <td>{{K2MissionFlag}} </td>
        <td>{{NumberofNotes}} </td>
        <td>{{RAStr}} </td>
        <td>{{RA}} </td>
        <td>{{DecStr}} </td>
        <td>{{Dec}} </td>
        <td>{{Distance}} </td>
        <td>{{OpticalMagnitude}} </td>
        <td>{{OpticalMagnitudeBand}} </td>
        <td>{{TemperatureK}} </td>
        <td>{{StellarMass}} </td>
        <td>{{StellarRadius}} </td>
        <td>{{Updated}} </td>
      </tr>
    {{/each}}
  </table>
{{else}}
  <br> <h4> You haven't added any exoplanets yet! </h4> <br>
{{/if}}
{{#if ownList}}
  <p><a class="btn btn-primary" href="/stargazers/{{username}}/{{linkName}}/add"> Add Exoplanet </a></p>
  {{#if list}}
    {{#if nasaObserved}}
      <p><a class="btn btn-primary" href="/stargazers/{{username}}/{{linkName}}/selectExoplanets"> Delete Exoplanet </a></p>
    {{else}}
      <p><a class="btn btn-primary" href="/stargazers/{{username}}/{{linkName}}/selectExoplanets"> Delete/Edit Exoplanet </a></p>
    {{/if}}
  {{/if}}
  {{#unless list}}
  <div class="form-group col-xs-4 col-md-offset-4">
    <p><a href="/stargazers/{{username}}" class="btn btn-secondary" role="button"> Back to Profile </a></p>
  </div>
  {{/unless}}
{{/if}}
